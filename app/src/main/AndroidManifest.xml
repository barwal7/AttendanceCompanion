<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.barwal.attendancecompanion">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launch_new"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity android:name=".AddSubject" />
        <activity android:name=".StudentActivity" />
        <activity android:name=".AddStudentActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".AttendanceActivity" />
        <activity android:name=".ViewAttendanceActivity" />
        <activity
            android:name=".SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TakeAttendanceActivity"
            android:label="@string/title_activity_take_attendance"
            android:theme="@style/AppTheme" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".IndividualDetailActivity"></activity>
    </application>

</manifest>